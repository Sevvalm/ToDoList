 @model List<ToDoList.Models.Entities.Todo>
 

<h1>Add To Do</h1>

<form method="post" asp-action="Index" asp-controller="Todo">
      
    <div class="mt-3">
    <label class="form-label">My To Do</label>
    <input type="text" class="form-control" name="Name" />
</div>

<div class="mt-3">
    <button type="submit" class="btn btn-primary">Save</button>
</div>
</form>


<h2>My ToDo List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Todo" asp-action="Edit" asp-route-id="@item.Id">Edit</a>

                </td>
            </tr>
        }
    </tbody>

</table>